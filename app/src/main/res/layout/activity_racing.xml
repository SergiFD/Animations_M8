<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gifBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/caranimation" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Ruedas de rayo mcqueen" />


    <ImageView
        android:id="@+id/iw_rayo"
        android:layout_width="331dp"
        android:layout_height="0dp"
        android:layout_marginTop="468dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/rayo_wheels_racing" />

    <ImageView
        android:id="@+id/wheel_1"
        android:layout_width="89dp"
        android:layout_height="73dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/iw_rayo"
        app:layout_constraintEnd_toEndOf="@+id/iw_rayo"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iw_rayo"
        app:layout_constraintVertical_bias="0.51"
        app:srcCompat="@drawable/wheels" />

    <ImageView
        android:id="@+id/wheel_2"
        android:layout_width="76dp"
        android:layout_height="69dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/iw_rayo"
        app:layout_constraintEnd_toEndOf="@+id/iw_rayo"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="@+id/iw_rayo"
        app:layout_constraintTop_toTopOf="@+id/iw_rayo"
        app:layout_constraintVertical_bias="0.519"
        app:srcCompat="@drawable/wheels" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#45FB7070"
        android:text="Pulsa el boton para hacer que Rayo vaya mas rapido"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/speedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Mas velocidad!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>
